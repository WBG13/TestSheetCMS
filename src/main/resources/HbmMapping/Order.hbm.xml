<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="Model.Beans.Order" table="order">
        <meta attribute="class-description">
            This class contains the department detail.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="subject_of_the_order" column="subject_of_the_order" type="string"/>
        <property name="author_of_the_order" column="author_of_the_order" type="string"/>
        <property name="executors_of_the_order" column="executors_of_the_order" type="string"/>
        <property name="period_of_execution" column="period_of_execution" type="date"/>
        <property name="sign_of_the_control" column="sign_of_the_control" type="string"/>
        <property name="sign_the_execution" column="sign_the_execution" type="string"/>
    </class>

</hibernate-mapping>